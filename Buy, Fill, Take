import java.util.Objects;
import java.util.Scanner;

class CoffeeMachine {
        static int dollars = 550;
        static int water = 400;
        static int milk = 540;
        static int coffeeBeans = 120;
        static int disposableCups = 9;
        static int coffeeChoice;
        static Scanner input = new Scanner(System.in);
        String coffee = input.nextLine();

        public static void main(String[] args) {
                MachineStatus();
                System.out.println("Buy, Fill, or Take: ");
                String coffee = input.nextLine();
                if (coffee.equals("Buy")) {
                        Buy();
                }
                if (coffee.equals("Fill")){
                        Fill();
                }
                if (coffee.equals("Take")){
                        System.out.println("I gave you $" + dollars);
                        dollars -= dollars;
                        MachineStatus();
                }
        }
        public static void Espresso() {
                dollars += 4;
                water -= 250;
                coffeeBeans -= 16;
                disposableCups -= 1;

        }
        public static void Latte() {
                dollars += 7;
                water -= 350;
                milk -= 75;
                coffeeBeans -= 20;
                disposableCups -= 1;

        }
        public static void Cappuccino() {
                dollars += 6;
                water -= 200;
                coffeeBeans -= 12;
                milk -= 100;
                disposableCups -= 1;
        }

        public static void Fill() {
                System.out.println("How much water do you want to add: ");
                water += input.nextInt();
                System.out.println("How much milk do you want to add: ");
                milk += input.nextInt();
                System.out.println("How much coffee do you want to add: ");
                coffeeBeans += input.nextInt();
                System.out.println("How much disposable cups do you want to add: ");
                disposableCups += input.nextInt();
                MachineStatus();
        }
        public static void MachineStatus() {
                System.out.println("The coffee machine has:");
                System.out.println(water + " ml of water");
                System.out.println(milk + " ml of milk");
                System.out.println(coffeeBeans + " g of coffee beans");
                System.out.println(disposableCups + " disposable cups");
                System.out.println("$" + dollars + " of money\n");
                System.out.println("==========================\n");
        }

        public static void Buy() {
                System.out.println("Please make a selection: 1 - Espresso || 2 - Latte || 3 - Cappuccino");
                int coffeeChoice = input.nextInt();
                if (coffeeChoice == 1) {
                        Espresso();
                        System.out.println();
                        MachineStatus();
                }
                if (coffeeChoice == 2) {
                        Latte();
                        System.out.println();
                        MachineStatus();
                }
                if (coffeeChoice == 3) {
                        Cappuccino();
                        System.out.println();
                        MachineStatus();
                }
        }
}









